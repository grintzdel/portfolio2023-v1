extends ../base.pug

block variables
  - var template = 'works'

block content
  .collections
    .collections__wrapper
      .collections__titles
        each collection, index in works
          .collections__titles__label=`${index == 0 ? 'One' : index == 1 ? 'Two' : index == 2 ? 'Three' : ''}`
          .collections__titles__title=collection.data.title

      .collections__gallery
        .collections__gallery__wrapper
          each collection in works
            each product in collection.data.products
              a.collections__gallery__link(href=Link(product.products_product))
                figure.collections__gallery__media
                  img.collections__gallery__media__image(alt=product.products_product.data.image.alt src=product.products_product.data.image.url)

      .collections__content
        each collection, index in works
          article.collections__article(class=index === 0 ? 'collections__article--active' : '')
            h2.collections__article__title=collection.data.title + ' Projects'
            p.collections__article__description=collection.data.description
